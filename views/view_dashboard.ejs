<%- include _header.ejs %>
	
	<script src="../js/index.js"></script>
	<body>

		<div id="content" layout="row" layout-wrap>
			<div id="main_content" flex="80">
				<div class="wrapper">
				<h1>Heartbeat Rate</h1>
					<canvas id="heartrate"></canvas>
					<a href="/weekview/<%= patient._id%>"><button>View Data</button></a>
				</div>
				
				<div class="wrapper">
				<h1>Activity</h1>
					<canvas id="activity"></canvas>
					<a href="/weekview/<%= patient._id%>"><button>View Data</button></a>
				</div>
				
				<div class="wrapper">
				<h1>Steps</h1>
					<canvas id="steps"></canvas>
					<a href="/weekview/<%= patient._id%>"><button>View Data</button></a>
				</div>
			</div>

			<md-toolbar id="sticky" flex="20">
				<div id="sidebar_wrapper">
					<h1>Patient</h1>
					<div id="patient_info">
						<p>Name: <%= patient.name %></p>
						<p>Access: <%= patient.accessCode %></p>
					</div>
				</div>

			</md-toolbar>
		</div>
	</body>
</html>